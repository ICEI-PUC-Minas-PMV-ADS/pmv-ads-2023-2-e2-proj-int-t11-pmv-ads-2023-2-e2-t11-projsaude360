@model ProjetoSaude360.Models.Tratamento


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tratamento</h4>
<hr />
<h2>Tratamentos do Usuário: </h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataTermino" class="control-label"></label>
                <input asp-for="DataTermino" class="form-control" />
                <span asp-validation-for="DataTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <textarea asp-for="Obs" class="form-control"></textarea>
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administracao" class="control-label"></label>
                <select asp-for="Administracao" class="input-select" asp-items="@Html.GetEnumSelectList<Enums.AdministracaoMed>()" required>
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Administracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="input-select" asp-items="@Html.GetEnumSelectList<Enums.TipoTratamento>()" required>
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
